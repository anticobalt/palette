<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="iced.egret.palette">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.ColorBackground"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.ColorBackground.NoDefaultActionBar.ActionMode">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activity.PictureViewActivity"
            android:theme="@style/AppTheme.ColorBackground.NoDefaultActionBar" />
        <activity
            android:name=".activity.CropActivity"
            android:label="@string/title_activity_crop"
            android:theme="@style/AppTheme.ColorBackground" />
        <activity
            android:name=".activity.RecycleBinActivity"
            android:label="@string/recycle_bin"
            android:theme="@style/AppTheme.ColorBackground.NoDefaultActionBar.ActionMode" />
    </application>

</manifest>