<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/translucentBlack"
    android:layout_gravity="bottom"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <ImageButton
        android:id="@+id/details"
        android:src="@drawable/ic_info_black_24dp"
        android:tint="@color/white"
        android:background="?android:selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/action_view_details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/share"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/share"
        android:src="@drawable/ic_share_black_24dp"
        android:tint="@color/white"
        android:background="?android:selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/action_view_details"
        app:layout_constraintStart_toEndOf="@+id/details"
        app:layout_constraintEnd_toStartOf="@id/crop"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/crop"
        android:src="@drawable/ic_crop_black_24dp"
        android:tint="@color/white"
        android:background="?android:selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/action_view_details"
        app:layout_constraintStart_toEndOf="@id/share"
        app:layout_constraintEnd_toStartOf="@+id/delete"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/delete"
        android:src="@drawable/ic_delete_black_24dp"
        android:tint="@color/white"
        android:background="?android:selectableItemBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/crop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/action_view_details"/>

</androidx.constraintlayout.widget.ConstraintLayout>