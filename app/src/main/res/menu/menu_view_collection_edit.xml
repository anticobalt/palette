<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="AppCompatResource">
    <!-- Ignore AppCompatResource for showAsAction because they don't work on ActionMode -->

    <item
        android:id="@+id/actionSelectAll"
        android:icon="@drawable/ic_select_all_black_24dp"
        android:orderInCategory="1"
        android:showAsAction="always"
        android:title="@string/action_select_all" />

    <item
        android:id="@+id/albumActions"
        android:icon="@drawable/ic_photo_album_black_24dp"
        android:orderInCategory="2"
        android:showAsAction="ifRoom"
        android:title="@string/label_album_actions"
        android:visible="false">
        <menu>
            <item
                android:id="@+id/actionSyncToAlbum"
                android:title="@string/action_sync_to_album"
                android:visible="false" />
            <item
                android:id="@+id/actionAddToAlbum"
                android:title="@string/action_add_to_album"
                android:visible="false" />
            <item
                android:id="@+id/actionRemoveFromAlbum"
                android:title="@string/action_remove_from_album"
                android:visible="false" />
        </menu>
    </item>

    <item
        android:id="@+id/actionShare"
        android:icon="@drawable/ic_share_black_24dp"
        android:orderInCategory="3"
        android:showAsAction="ifRoom"
        android:title="@string/action_share"
        android:visible="false" />

    <item
        android:id="@+id/actionMove"
        android:orderInCategory="4"
        android:showAsAction="never"
        android:title="@string/action_move"
        android:visible="false" />

    <item
        android:id="@+id/actionDelete"
        android:orderInCategory="5"
