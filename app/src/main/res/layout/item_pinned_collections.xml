<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cover_size">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/ivPinnedCollectionCover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cover_size"
            tools:ignore="ContentDescription"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tvPinnedCollectionLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/ivPinnedCollectionCover"
            android:gravity="start"
            android:padding="15dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:ellipsize="end"
            android:singleLine="true"
            />

        <ImageButton
            android:id="@+id/btnSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/ivPinnedCollectionCover"
            app:layout_constraintRight_toRightOf="@id/ivPinnedCollectionCover"
            android:src="@drawable/ic_check_black_24dp"
            android:tint="@color/white"
            android:backgroundTint="@color/colorPrimaryDark"
            android:visibility="invisible"
            android:contentDescription="@string/action_select"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>