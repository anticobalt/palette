<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ColorBackground" parent="AppTheme">
        <item name="android:windowBackground">@color/grey</item>
    </style>

    <style name="AppTheme.ColorBackground.NoDefaultActionBar" parent="AppTheme.ColorBackground">
        <!-- Disables default action bar, allowing you to specify your own toolbar in the layout. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.ColorBackground.NoDefaultActionBar.ActionMode" parent="AppTheme.ColorBackground.NoDefaultActionBar">
        <!-- Make ActionMode toolbar overlap existing toolbars -->
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.ColorBackground.TranslucentUI" parent="AppTheme.ColorBackground">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
