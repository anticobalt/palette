<?xml version="1.0" encoding="utf-8"?>

<!--
GestureFrameLayout used instead of GestureImageView, because of performance issues
on GestureImageViews with abnormally wide images.
-->
<com.alexvasilkov.gestures.views.GestureFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gestureFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- GestureFrameLayout can contain only one child -->

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/normalImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- optimizeDisplay = auto-zoom when image is large -->
        <com.github.piasy.biv.view.BigImageView
            android:id="@+id/bigImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:optimizeDisplay="false"
            android:visibility="gone"
            />

    </FrameLayout>

</com.alexvasilkov.gestures.views.GestureFrameLayout>