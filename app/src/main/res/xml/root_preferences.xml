<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/appearance_header">

        <!--
        Didn't use normal Preference + MaterialDialogs ColorPicker because
        there's a bug where the title of the dialog is highlighted on launch.
        -->
        <com.kizitonwose.colorpreferencecompat.ColorPreferenceCompat
            android:defaultValue="@color/colorPrimary"
            app:colorChoices="@array/theme_colors"
            app:iconSpaceReserved="false"
            app:key="@string/primary_color_key"
            app:numColumns="6"
            app:title="@string/primary_color_preference" />

        <com.kizitonwose.colorpreferencecompat.ColorPreferenceCompat
            android:defaultValue="@color/colorAccent"
            app:colorChoices="@array/theme_colors"
            app:iconSpaceReserved="false"
            app:key="@string/accent_color_key"
            app:numColumns="6"
            app:title="@string/accent_color_preference" />

        <com.kizitonwose.colorpreferencecompat.ColorPreferenceCompat
            android:defaultValue="@color/white"
            app:colorChoices="@array/text_colors"
            app:iconSpaceReserved="false"
            app:key="@string/toolbar_item_color_key"
            app:numColumns="6"
            app:title="@string/toolbar_item_color_preference" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/pager_header">

        <androidx.preference.SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            app:key="@string/pager_toolbar_color_key"
            app:summary="@string/pager_toolbar_color_summary"
            app:title="@string/pager_toolbar_color_preference" />

        <androidx.preference.SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            app:key="@string/true_zoom_key"
            app:summary="@string/true_zoom_summary"
            app:title="@string/true_zoom_preference" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/waiting_room_header">

        <androidx.preference.SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            app:key="@string/waiting_room_autoclear_key"
            app:summary="@string/waiting_room_autoclear_summary"
            app:title="@string/waiting_room_autoclear_preference" />

    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/permissions_header">

        <Preference
            app:iconSpaceReserved="false"
            app:key="@string/sd_card_grant_key"
            app:title="@string/sd_card_grant_permission" />

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
